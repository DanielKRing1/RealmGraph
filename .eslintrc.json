{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
    // "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest", "prettier"],
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "windows"],
    "max-len": ["error", { "code": 150 }],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],

    "prettier/prettier": [
      1,
      {
        "useTabs": false,
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
